{
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "css.validate": false,
  "editor.inlineSuggest.enabled": true,
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    ".*Styles.",
    ".*Classes."
  ],
  "tailwindCSS.experimental.classRegex": [
    "\"slots\":\\s*\\{[^}]*\"[^\"]+\":\\s*\"([^\"]+)\"[^}]*\\}", // Matches classes in slots object
    "\"values\":\\s*\\{[^}]*\"[^\"]+\":\\s*\"([^\"]+)\"[^}]*\\}", // Matches classes in values object (direct string or nested object)
    "\"class\":\\s*\"([^\"]+)\""
  ]
}
